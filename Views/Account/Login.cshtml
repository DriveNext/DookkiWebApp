@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    @Styles.Render("~/Content/css")
    <link href="~/Content/style.css" rel="stylesheet" />
    <style>
        body {
            background: #F26531;
            font-family: Roboto;
        }

        #login .form-group {
            margin-bottom: 5px;
            margin-top: 15px;
        }

        #login img {
            width: 100%;
            height: 100px;
            margin-top: 50px;
            object-fit: cover;
        }

        .form-login {
            background: white;
            margin-top: 20px;
            padding: 5px 15px;
        }
        .buttons-forgot {
            text-align: right;
        }
        .buttons-forgot .link_forgot {
            text-decoration: underline;
            color: #757575;
            font-size: 1.4rem;
        }
    </style>
</head>

<body class="visible-xs">
    <section id="login">
        <div class="container-fluid">
            <div class="logo_login">
                <img src="~/Assets/Images/dookki/logo_dookki_2.png" />
            </div>
            @using (Html.BeginForm("Login", "Account", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
            {
                <div class="form-login">
                    <h3 class="text-center t-bold" style="font-size: 2.2rem; color: #F26531">ĐĂNG NHẬP</h3>
                    @ViewBag.SigninSuccess
                    <div class="form-group">
                        <label class="control-label">Số điện thoại</label>
                        <input class="form-control" type="text" name="SDT" placeholder="Nhập số điện thoại" />
                        @ViewData["Loi1"]
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mật khẩu<span>*</span></label>
                        <input class="form-control" type="password" name="MatKhau" placeholder="Nhập mật khẩu" />
                        @ViewData["Loi2"]
                    </div>

                    @ViewData["LoiDN"]

                    <div class="buttons-forgot">
                        <a href="#" class="link_forgot">Quên mật khẩu?</a>
                    </div>
                    <div class="form-group" style="text-align: center; margin: 25px 0;">
                        <button class="btn_signin t-bold">Đăng nhập</button>
                    </div>
                </div>
            }
        </div>
    </section>
</body>
</html>