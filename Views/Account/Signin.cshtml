
@{
    ViewBag.Title = "Đăng ký tài khoản";
}

<h3 class="text-center t-bold">Đăng ký tài khoản</h3>

<section id="signin">
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label class="control-label">Họ tên<span>*</span></label>
                <input class="form-control" type="text" name="HoTen" placeholder="Nhập họ tên" />
                @ViewData["Loi1"]
            </div>
            <div class="form-group">
                <label class="control-label">Ngày sinh<span>*</span></label>
                <input class="form-control" type="date" name="NgaySinh" placeholder="Chọn ngày" />
            </div>

            <div class="form-group">
                <label class="control-label">Số điện thoại<span>*</span></label>
                <input class="form-control" type="text" name="SDT" placeholder="Nhập số điện thoại" />
                @ViewData["Loi2"]
            </div>

            <div class="form-group">
                <label class="control-label">Email<span>*</span></label>
                <input class="form-control" type="text" name="Email" placeholder="Nhập Email" />
                @ViewData["Loi3"]
            </div>

            <div class="form-group">
                <label class="control-label">Giới tính<span>*</span></label>
                <select class="form-control">
                    <option value="0">Nam</option>
                    <option value="1">Nữ</option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Nhập mật khẩu<span>*</span></label>
                <input class="form-control" type="password" name="MatKhau" placeholder="Nhập mật khẩu" />
                @ViewData["Loi4"]
            </div>

            <div class="form-group">
                <label class="control-label">Nhập lại mật khẩu<span>*</span></label>
                <input class="form-control" type="password" name="MatKhauNhapLai" placeholder="Nhập lại mật khẩu" />
                @ViewData["Loi5"]
                @ViewData["Loi6"]
            </div>

            <div class="form-signup" style="color:red;">
                @ViewBag.LoiDK
            </div>

            <div class="buttons-forgot">
                <label> Bạn đã có tài khoản? </label>
                <a href="@Url.Action("Login", "Account")" class="link_access">đăng nhập ngay</a>
            </div>
            <div class="form-group" style="text-align: center; margin-top: 15px; margin-bottom: 120px;">
                <button class="btn_signin t-bold">Đăng ký</button>
            </div>
        }
    </div>    
</section>